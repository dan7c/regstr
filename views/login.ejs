<div class="row justify-content-center">
  <div class="col">
    <img src="/assets/images/logo.png" class="mx-auto d-block">
    <h1 class="bemvindo text-center">Bem-vindo! </h1>
  </div>
</div>
<div class="row justify-content-center">
  <form class="text-center my-4 formulario">
    <div class="form-group mb-5">
      <label for="email"><b>Email: </b></label>
      <input type="email" class="form-control" placeholder="Informe o email" id="email" required>
    </div>
    <div class="form-group">
      <label for="pwd"><b>Senha: </b></label>
      <input type="password" class="form-control" placeholder="Digite a senha" id="pwd" required>
    </div>
    <div class="row justify-content-center">
      <button type="submit" class="btn btn-secondary" id="login">Entrar</button>
      <button type="button" class="btn btn-secondary" id="register"
        onclick="location.href='register';">Registrar</button>
    </div>
    <button type="button" class="btn btn-link" id="forgot-pwd">Esqueci minha senha</button>
  </form>
</div>